<script>
    var input = document.getElementById("search");
    input.addEventListener("keyup", function (event) {
        console.log(event.keyCode);
        if (event.keyCode === 13) {
            event.preventDefault();
            $.ajax({
                url: "/Home/Search?skip=0&take=10&keyword=" + input.value,
                type: "POST",
                context: document.body,
                success: function(data) {
                    var render = () => {
                        const products = data.map(x => {
                            return `
                     <div class="card-wrapper col-lg-3 col-md-4 col-sm-5 col-12 tlt mt-3">
                        <a href="/Detail?id=${x.Id}">
                            <div class="card-product">
                                <div class="pd-img">
                                    <img class="img-product" src="${x.Image}" alt="">
                                </div>
                                <div class="infor">
                                    <div class="name">${x.Name}</div>
                                    <strong class="price">${(new Intl.NumberFormat('de-DE').format(x.Price))}₫</strong>
                                </div>
                            </div>
                        </a>
                    </div>
                `;
                        });

                        $$('#renderSearch').innerHTML = products.join('');
                        $$('#bodyOld').remove();
                    };
                    render()
                },
                error: function(error) {
                    console.log("Error:");
                    console.log(error);
                }


            });

        }

    })

</script>
